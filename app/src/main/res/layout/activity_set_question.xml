<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.test.SetQuestionActivity">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:paddingRight="14dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:background="@drawable/left_yellow" />

        <TextView
            android:id="@+id/tv_top_title"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="刷题设置"
            android:textColor="@color/black"
            android:textSize="21sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:text="每组题目数量"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/config_margin_30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center">

        <com.donkingliang.labels.LabelsView
            android:id="@+id/lv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:labelBackground="@drawable/label_bg_word_group"
            app:labelGravity="center"
            app:labelTextColor="@drawable/label_text_color_word_group"
            app:labelTextHeight="50dp"
            app:labelTextSize="16sp"
            app:labelTextWidth="75dp"
            app:isTextBold="true"
            app:lineMargin="@dimen/config_margin_20dp"
            app:selectType="SINGLE_IRREVOCABLY"
            app:wordMargin="14dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:text="出题来源"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/config_margin_30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <com.donkingliang.labels.LabelsView
            android:id="@+id/lv_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:labelBackground="@drawable/label_bg_word_group"
            app:labelGravity="center"
            app:labelTextColor="@drawable/label_text_color_word_group"
            app:labelTextHeight="60dp"
            app:labelTextSize="16sp"
            app:labelTextWidth="75dp"
            app:isTextBold="true"
            app:lineMargin="@dimen/config_margin_20dp"
            app:selectType="SINGLE_IRREVOCABLY"
            app:wordMargin="14dp" />

    </LinearLayout>

    <com.xuexiang.xui.widget.button.roundbutton.RoundButton
        android:id="@+id/btn_save"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/config_margin_30dp"
        app:rb_backgroundColor="@color/g_yellow"
        app:rb_radius="50dp"
        android:textSize="20sp"
        android:text="保存"/>

</LinearLayout>