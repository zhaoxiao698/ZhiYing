<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.mine.ThemeActivity">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:paddingRight="14dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:background="@drawable/left_yellow"
            app:tint="?attr/myBgColor" />

        <TextView
            android:id="@+id/tv_top_title"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="切换主题"
            android:textColor="@color/black"
            android:textSize="21sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_yellow"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:layout_below="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.xuexiang.xui.widget.imageview.RadiusImageView
            android:id="@+id/iv_yellow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            app:riv_is_oval="true"
            android:src="@color/g_yellow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_yellow"
            android:layout_marginLeft="10dp"
            android:text="橙色"
            android:textSize="20sp"
            android:textColor="@color/g_yellow"/>

        <Button
            android:id="@+id/btn_yellow"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:text="使用"
            android:textSize="18sp"
            android:textColor="@color/gray"
            android:background="@drawable/shape_theme_btn1"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_blue"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:layout_below="@+id/rl_yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.xuexiang.xui.widget.imageview.RadiusImageView
            android:id="@+id/iv_blue"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            app:riv_is_oval="true"
            android:src="@color/g_blue"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_blue"
            android:layout_marginLeft="10dp"
            android:text="蓝色"
            android:textSize="20sp"
            android:textColor="@color/g_blue"/>

        <Button
            android:id="@+id/btn_blue"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:text="使用"
            android:textSize="18sp"
            android:textColor="@color/gray"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_theme_btn1"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_red"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:layout_below="@+id/rl_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.xuexiang.xui.widget.imageview.RadiusImageView
            android:id="@+id/iv_red"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            app:riv_is_oval="true"
            android:src="@color/g_red"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_red"
            android:layout_marginLeft="10dp"
            android:text="红色"
            android:textSize="20sp"
            android:textColor="@color/g_red"/>

        <Button
            android:id="@+id/btn_red"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:text="使用"
            android:textSize="18sp"
            android:textColor="@color/gray"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_theme_btn1"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_green"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:layout_below="@+id/rl_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.xuexiang.xui.widget.imageview.RadiusImageView
            android:id="@+id/iv_green"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            app:riv_is_oval="true"
            android:src="@color/g_green"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_green"
            android:layout_marginLeft="10dp"
            android:text="绿色"
            android:textSize="20sp"
            android:textColor="@color/g_green"/>

        <Button
            android:id="@+id/btn_green"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:text="使用"
            android:textSize="18sp"
            android:textColor="@color/gray"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_theme_btn1"/>

    </RelativeLayout>

</RelativeLayout>