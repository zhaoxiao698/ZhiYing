<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.mine.HelpFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_document"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/config_margin_10dp"
        android:layout_marginRight="@dimen/config_margin_10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="3dp"
        app:cardUseCompatPadding="true"
        app:contentPaddingBottom="@dimen/config_padding_30dp"
        app:contentPaddingLeft="@dimen/config_padding_30dp"
        app:contentPaddingRight="@dimen/config_padding_30dp"
        app:contentPaddingTop="@dimen/config_padding_30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:src="@drawable/document_mine" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_avatar"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:text="帮助文档"
                android:textColor="@color/black"
                android:textSize="23sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>