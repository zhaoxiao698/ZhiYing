        <com.donkingliang.labels.LabelsView
            android:id="@+id/lv_position"
            android:layout_marginTop="@dimen/config_margin_20dp"
            android:layout_marginLeft="@dimen/config_margin_20dp"
            app:lineMargin="@dimen/config_margin_20dp"
            app:wordMargin="@dimen/config_margin_20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:labelBackground="@drawable/label_bg_option"
            app:labelTextColor="@drawable/label_text_color_option"
            app:labelTextWidth="40dp"
            app:labelTextHeight="40dp"
            app:labelTextSize="18sp"
            app:selectType="SINGLE"/>

        <LinearLayout
            android:layout_marginBottom="10dp"
