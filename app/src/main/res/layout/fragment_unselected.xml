<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".fragment.test.UnselectedFragment">

    <TextView
        android:id="@+id/tv_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="还未选择题库"/>

    <com.xuexiang.xui.widget.button.roundbutton.RoundButton
        android:id="@+id/btn_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/config_padding_10dp"
        android:paddingBottom="@dimen/config_padding_10dp"
        android:paddingStart="@dimen/config_padding_20dp"
        android:paddingEnd="@dimen/config_padding_20dp"
        app:rb_backgroundColor="@color/g_yellow"
        app:rb_radius="5dp"
        android:layout_margin="@dimen/config_margin_20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="选择题库"/>

</LinearLayout>