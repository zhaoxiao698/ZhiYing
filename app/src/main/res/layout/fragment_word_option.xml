<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.word.WordOptionFragment">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fl_speech"
        android:visibility="gone"
        android:name="com.zhaoxiao.zhiying.fragment.word.SpeechFragment"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cancel"
            android:textColor="@color/g_yellow"
            android:textSize="50dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:background="@drawable/shape_word_phone"
            android:text="美 /'kænsl/"/>

    </LinearLayout>

</FrameLayout>