<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:paddingTop="@dimen/config_padding_20dp"
    android:paddingBottom="@dimen/config_padding_20dp"
    android:paddingLeft="@dimen/config_padding_30dp"
    android:paddingRight="@dimen/config_padding_30dp"
    android:layout_height="wrap_content"
    tools:showIn="@layout/fragment_selected">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.xuexiang.xui.widget.progress.CircleProgressView
            android:id="@+id/progressView_circle_small1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cpv_animate_type="AccelerateDecelerateInterpolator"
            app:cpv_circle_broken="false"
            app:cpv_end_color="#00EEFA"
            app:cpv_end_progress="78"
            app:cpv_isFilled="false"
            app:cpv_isTracked="true"
            app:cpv_progress_duration="2000"
            app:cpv_progress_textColor="#28AAFB"
            app:cpv_progress_textSize="18sp"
            app:cpv_progress_textVisibility="false"
            app:cpv_progress_width="8dp"
            app:cpv_start_color="#0052a3"
            app:cpv_start_progress="0"
            app:cpv_track_color="#22FFF5"
            app:cpv_track_width="4dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#28AAFB"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:text="完成度" />

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="549/1500"
                    android:textColor="#28AAFB"
                    android:textSize="18sp" />

<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="/"-->
<!--                    android:textColor="#28AAFB"-->
<!--                    android:textSize="18sp" />-->

<!--                <TextView-->
<!--                    android:id="@+id/tv_all"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="1500"-->
<!--                    android:textColor="#28AAFB"-->
<!--                    android:textSize="18sp" />-->

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content">

        <com.xuexiang.xui.widget.progress.CircleProgressView
            android:id="@+id/progressView_circle_small2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cpv_animate_type="AccelerateDecelerateInterpolator"
            app:cpv_circle_broken="false"
            app:cpv_end_color="@color/green_end"
            app:cpv_end_progress="78"
            app:cpv_isFilled="false"
            app:cpv_isTracked="true"
            app:cpv_progress_duration="2000"
            app:cpv_progress_textColor="#27E82F"
            app:cpv_progress_textSize="18sp"
            app:cpv_progress_textVisibility="false"
            app:cpv_progress_width="8dp"
            app:cpv_start_color="@color/green_start"
            app:cpv_start_progress="0"
            app:cpv_track_color="#B8FBBB"
            app:cpv_track_width="4dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#27E82F"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:text="正确率" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/progress_text_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#27E82F"
                    android:textSize="40sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textColor="#27E82F"
                    android:textSize="30sp" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>